FROM python:3.9-slim

WORKDIR /app

COPY gold_agent/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy shared code (Using docker context)
COPY shared /app/shared

COPY gold_agent /app/gold_agent

# Set python path to include root
ENV PYTHONPATH=/app

CMD ["python", "-u", "gold_agent/judge.py"]
